FROM continuumio/miniconda

WORKDIR /app


COPY .env .
COPY consumer.py .
COPY consumer_environment.yml .

RUN conda env create -f consumer_environment.yml

# Make RUN commands use the new environment:
SHELL ["conda", "run", "-n", "consumer", "/bin/bash", "-c"]

# Make sure the environment is activated:
RUN echo "Make sure pika is installed:"
RUN python -c "import pika"

# The code to run when container is started:

ENTRYPOINT ["conda", "run", "-n", "consumer", "python", "consumer.py"]

